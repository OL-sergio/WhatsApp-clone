<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImage_rowViewConversationsUsers"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:civ_border_color="@color/borderImage"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckedTextView
        android:id="@+id/textView_rowViewConversationsName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:text="@string/checkedtextview"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/circleImage_rowViewConversationsUsers"
        app:layout_constraintTop_toTopOf="@+id/circleImage_rowViewConversationsUsers" />

    <CheckedTextView
        android:id="@+id/textView_rowViewConversationsLastMessage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:padding="1dp"
        android:text="@string/checkedtextview"
        app:layout_constraintStart_toEndOf="@+id/circleImage_rowViewConversationsUsers"
        app:layout_constraintTop_toBottomOf="@+id/textView_rowViewConversationsName" />


</androidx.constraintlayout.widget.ConstraintLayout>