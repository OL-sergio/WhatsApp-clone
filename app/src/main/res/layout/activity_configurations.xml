<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfigurationsActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImage_viewPhotoProfile"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/padrao"
        app:civ_border_color="@color/borderImage"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImage_viewPhotoProfile">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/nome_utilizador"
            android:inputType="textPersonName"
            android:minHeight="50dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_edit_verde_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_information"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:text="@string/text_information_config"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <ImageButton
        android:id="@+id/imageButton_ImagePhoto"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:background="#E7E6E6"
        android:padding="1dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/circleImage_viewPhotoProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton_ImageInsertGallery"
        app:layout_constraintTop_toTopOf="@+id/circleImage_viewPhotoProfile"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/imageButton_ImageInsertGallery"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:background="#E7E6E6"
        android:padding="1dp"
        android:src="@drawable/ic_insert_photo"
        app:layout_constraintBottom_toBottomOf="@+id/circleImage_viewPhotoProfile"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_ImagePhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circleImage_viewPhotoProfile"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>